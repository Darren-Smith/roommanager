<%- include('./head')%>
    <%- include('./header')%>
    <div class="background-image"></div>
        <div class="container h-100">
            <div class="h-75 d-flex flex-column justify-content-center align-items-center">
                <h1>Login</h1>
                <form class="justify-content-center" action="login" method="POST" id="login" name="login">
                    <div class="form-group">
                        <label for="username">Name</label>
                        <input type="text" class="form-control" name="username" id="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" required>
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-primary mt-3">Login</button></div>
                </form>
            </div>
        </div>
        <%- include('./footer')%>